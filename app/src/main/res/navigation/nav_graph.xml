<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newsFragment">

    <fragment
        android:id="@+id/newsFragment"
        android:name="com.newsapp.presentation.views.news.NewsFragment"
        android:label="News"
        tools:layout="@layout/fragment_news" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.newsapp.presentation.views.category.CategoryFragment"
        android:label="Category"
        tools:layout="@layout/fragment_category" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.newsapp.presentation.views.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/sourceFragment"
        android:name="com.newsapp.presentation.views.source.SourceFragment"
        android:label="Source"
        tools:layout="@layout/fragment_source" />
    <fragment
        android:id="@+id/settingFragment"
        android:name="com.newsapp.presentation.views.setting.SettingFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_setting" >
        <action
            android:id="@+id/action_settingFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_settingFragment_to_saveFragment"
            app:destination="@id/saveFragment" />
    </fragment>
    <fragment
        android:id="@+id/saveFragment"
        android:name="com.newsapp.presentation.views.favorite.FavoriteFragment"
        android:label="SaveFragment" />
    <dialog
        android:id="@+id/bottom_sheet_parent"
        android:label="@string/newsapp"/>
</navigation>